.cplant-login-labs-logo-container(layout="row" layout-align="center center" flex id="cplant-login-container")
    md-card(flex-gt-md="25" flex-md="40" flex-sm="50" flex-xs="70")
        md-card-title.cplant-login-tool-logo-container
        md-card-content(layout="column" class="md-inline-form")
        form
            div
                md-input-container.md-block
                    label Kerberos ID
                    input(name="kerberosid" required ng-model="loginCtrl.kerberosid")
            div
                md-input-container.md-block
                    label Password
                    input(name="password" type="password" required ng-model="loginCtrl.password")
            div(layout="row" layout-align="end")
                md-button(type="submit" ng-click="loginCtrl.login()" ng-disabled='loginCtrl.startProgress') Login
    md-progress-linear(md-mode="indeterminate" ng-hide="!loginCtrl.startProgress" id="login-progress-bar")
